#!/bin/bash -e

if [ ! -e /usr/local/kubebuilder ]; then
   echo "Installing https://github.com/kubernetes-sigs/kubebuilder/releases/download/v1.0.8/kubebuilder_1.0.8_linux_amd64.tar.gz"
   curl -SLf 'https://github.com/kubernetes-sigs/kubebuilder/releases/download/v1.0.8/kubebuilder_1.0.8_linux_amd64.tar.gz' | tar -xz -C /usr/local
   ln -sf kubebuilder_v1.0.8_linux_amd64 /usr/local/kubebuilder
fi

exec /usr/local/kubebuilder/bin/kubebuilder "$@"
