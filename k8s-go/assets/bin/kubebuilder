#!/bin/bash -e

if [ ! -d ~/bin/kubebuilder_1.0.0_linux_amd64 ]; then
   echo "Installing https://github.com/kubernetes-sigs/kubebuilder/releases/download/v1.0.0/kubebuilder_1.0.0_linux_amd64.tar.gz"
   cd ~/bin
   rm -f kubebuilder_1.0.0_linux_amd64.tar.gz
   wget 'https://github.com/kubernetes-sigs/kubebuilder/releases/download/v1.0.0/kubebuilder_1.0.0_linux_amd64.tar.gz'
   tar -xf kubebuilder_1.0.0_linux_amd64.tar.gz
   cd -
fi

exec ~/bin/kubebuilder_1.0.0_linux_amd64/bin/kubebuilder "$@"
